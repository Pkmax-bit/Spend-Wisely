@model Chitieu.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<h2>Thông tin cá nhân</h2>

@if (TempData["Success"] != null)
{
        <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Update" asp-controller="Profile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Họ tên</label>
        <input class="form-control" name="Hoten" value="@Model.Hoten" />
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        <input class="form-control" name="Sdt" value="@Model.Sdt" />
    </div>
    <div class="form-group">
        <label>Ảnh đại diện</label><br />
        @if (!string.IsNullOrEmpty(Model.Hinhanh))
        {
                <img src="@Model.Hinhanh" alt="Avatar" width="100" height="100" />

            <br />
        }
        <input type="file" name="uploadImage" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Cập nhật</button>
</form>

<hr />
<a asp-action="AddNguoiChiTieu" class="btn btn-secondary">Thêm người trong gia đình</a>
